# Alacritty configuration file

# Window settings
window = { 
    # Opacity of the window (0.0 - 1.0)
    opacity = 1.0

    # Size of the window
    dimensions = { 
        columns = 80
        lines = 24 
    }

    # Window padding
    padding = { 
        x = 5 
        y = 5 
    }
}

# Font settings
font = {
    normal = { 
        family = "Fira Code" 
        style = "Regular" 
    }
    bold = { 
        family = "Fira Code" 
        style = "Bold" 
    }
    italic = { 
        family = "Fira Code" 
        style = "Italic" 
    }
    size = 12.0
}

# Colors
colors = {
    # Default colors
    primary = {
        background = "#1e1e1e"
        foreground = "#ffffff"
    }

    # Cursor colors
    cursor = {
        text = "black"
        cursor = "white"
    }

    # Palette colors
    black = "#000000"
    red = "#ff5555"
    green = "#50fa7b"
    yellow = "#f1fa8c"
    blue = "#bd93f9"
    magenta = "#ff79c6"
    cyan = "#8be9fd"
    white = "#bbbbbb"

    # Bright colors
    bright_black = "#666666"
    bright_red = "#ff6e6e"
    bright_green = "#69ff94"
    bright_yellow = "#ffffa5"
    bright_blue = "#d6acff"
    bright_magenta = "#ff92df"
    bright_cyan = "#a4ffff"
    bright_white = "#ffffff"
}

# Shell settings
shell = {
    program = "/usr/bin/bash"  # Change to your preferred shell
    args = ["--login"]  # Optional: adjust based on your shell
}

# Key bindings
key_bindings = [
    { key = V, mods = "Control|Shift", action = "Paste" },
    { key = C, mods = "Control|Shift", action = "Copy" }
]

# Mouse bindings
mouse = {
    bindings = [
        { mouse = "Middle", action = "Paste" }
    ]
}

# Additional settings
# Uncomment and adjust for transparency
# window = {
#     opacity = 0.8
# }
	
